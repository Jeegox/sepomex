# @see http://editorconfig.org/
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[{.stylelintrc,.eslintrc,*.json,*.bowerrc}]
indent_size = 2

[{jshint.json,*.jshintrc}]
indent_size = 2

[{.analysis_options,*.yml,*.yaml}]
indent_size = 2

[{lib/**}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
