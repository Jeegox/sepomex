{
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": false,
    "allowJs": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "es6",
    "diagnostics": true,
    "emitBOM": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": false,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "moduleResolution": "node",
    "rootDir": ".",
    "baseUrl": ".",
    "types": ["reflect-metadata"],
    "paths": {},
    "lib": ["es6", "dom"]
  },
  "compileOnSave": true,
  "exclude": [
    "node_modules"
  ]
}

